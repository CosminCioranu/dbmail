AC_INIT(main.c)
AC_CONFIG_AUX_DIR(buildtools)
AM_CONFIG_HEADER(config.h:config.in)
DBMAIL_MSG_CONFIGURE_START
AM_INIT_AUTOMAKE(dbmail, 2.0)
AM_MAINTAINER_MODE

AC_PROG_RANLIB

pgsqlheaderpaths="/usr/include/pgsql /usr/include /usr/local/include/pgsql \
                  /usr/local/include /usr/freeware/include/pgsql \
                  /usr/freeware/include $HOME/include $HOME/pgsql/include \
		  /usr/local/pgsql/include /usr/include/postgresql $HOME"

ldapheaderpaths="/usr/include /usr/local/include"
sieveheaderpaths="/usr/include /usr/local/include"

DBMAIL_BOTH_SQL_CHECK
DBMAIL_CHECK_SQL_LIBS
DBMAIL_AUTH_CONF
DBMAIL_CHECK_LDAP_LIBS
DBMAIL_SIEVE_CONF
DBMAIL_CHECK_SIEVE_LIBS

AC_PROG_CC
AC_COMPILE_WARNINGS
AC_C_CONST
AC_C_INLINE

AM_CONDITIONAL(MYSQL, [test -n "$MYSQLINC"])
AM_CONDITIONAL(PGSQL, [test -n "$PGSQLINC"])
AM_CONDITIONAL(SIEVE, [test -n "$SIEVEINC"])
AM_CONDITIONAL(LDAP, [test -n "$LDAPINC"])
AC_C_BIGENDIAN
AC_CHECK_HEADERS(endian.h)
AC_CHECK_HEADERS(crypt.h)
AC_SUBST(SQLLIB)
AC_SUBST(LDAPLIB)
AC_SUBST(SQLALIB)
AC_SUBST(SORTALIB)
AC_SUBST(AUTHALIB)
AC_SUBST(SIEVELIB)
AC_SUBST(MYSQLINC)
AC_SUBST(PGSQLINC)
AC_SUBST(SIEVEINC)
AC_SUBST(LDAPINC)
AC_OUTPUT(Makefile mysql/Makefile pgsql/Makefile auth/Makefile sort/Makefile)
